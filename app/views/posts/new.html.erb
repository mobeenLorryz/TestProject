
<div class='container'>
    <h1>New Post</h1>
    <%= form_for @post do |f| %>
        <div class='form-group'>
            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class='float-right' > 
        <%= link_to 'Back', posts_path, class: 'btn btn-secondary' %>
        <%= f.submit 'Post', class: 'btn btn-primary' %>
        </div>
    <% end %>

</div>